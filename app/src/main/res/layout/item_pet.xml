<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Pet Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pet_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_pet_placeholder"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="16dp"/>

        <!-- Pet Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pet_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/pet_type_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cat, Breed"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/pet_age_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cat, 1 Year"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <!-- Edit Button -->
        <Button
            android:id="@+id/edit_pet_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Edit Pet"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_pink"
            android:paddingHorizontal="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>